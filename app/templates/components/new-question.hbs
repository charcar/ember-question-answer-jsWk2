{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div class= "form">
      <form>
        <div class="form-group">
          <label for="inquiry">Question</label>
          {{input value=inquiry id="inquiry"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes"}}
        </div>

        <div class="form-group">
        <label for="category">Category</label>
          {{#x-select value=category class="select"}}
            {{#x-option value='lifestyle'}}Lifestyle{{/x-option}}
            {{#x-option value='labor'}}Labor{{/x-option}}
            {{#x-option value='infant'}}Infants{{/x-option}}
          {{/x-select}}
        </div>




        <button {{action 'saveQuestion1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
