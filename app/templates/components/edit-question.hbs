{{#if editQuestionForm}}
 <h4>Update question</h4>
   <div>
     <form>
       <div class="form-group">
         <label for="question">Question</label>
         {{input value=inquiry id="inquiry" placeholder=question.inquiry}}
       </div>

       <div class="form-group">
         <label for="author">Author</label>
         {{input value=author id="author" placeholder=question.author}}
       </div>

       <div class="form-group">
         <label for="notes">Notes</label>
         {{input value=notes id="notes" placeholder=question.notes}}
       </div>

       <div class="form-group">
       <label for="category">Category</label>
         {{#x-select value=category class="select"}}
           {{#x-option value='lifestyle'}}Lifestyle{{/x-option}}
           {{#x-option value='labor'}}Labor{{/x-option}}
           {{#x-option value='infant'}}Infants{{/x-option}}
         {{/x-select}}
       </div>

       <button {{action 'update' question}}>Save</button>
     </form>
   </div>
 {{else}}
   <button {{action 'editQuestionForm'}}>Update Question</button>
 {{/if}}
